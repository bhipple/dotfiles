#!/bin/sh
# Quick script to load up the keyring

add() {
    key="$HOME/.ssh/$1"
    if ! [ -f "$key" ]; then
        echo "ERROR: Failed to find key: $key"
        exit 1
    fi

    if ssh-add -l | grep -q "$key"; then
        echo "$key already added"
    else
        echo "Adding $key"
        ssh-add "$key"
    fi
}

add brh-key
add gitlab
