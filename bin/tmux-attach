#!/usr/bin/env zsh

if [ -n $1 ]; then
    # User asked for a session name; attach to it or create it
    if tmux ls | grep -q "^$1: "; then
        exec tmux a -t $1
    else
        exec tmux new -s $1
    fi
else
    # fzf attach to a session, chosen interactively
    tmux ls || tmux
    session=$(tmux ls | fzf | cut -d':' -f1)
    echo "Connecting to $session"
    exec tmux a -t $session
fi
