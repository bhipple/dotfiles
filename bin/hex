#!/usr/bin/env bash
# $@ is a hex number that may be separated by spaces on bytes (will strip them)

hex=$(echo "$@" | sed 's/ //g' | tr '[:lower:]' '[:upper:]')
binary=$(echo "ibase=16; obase=2; $hex" | bc)
decimal=$(echo "ibase=16; $hex" | bc)

echo "Hex:     $hex"
echo "Decimal: $decimal"
echo "Binary:  $binary"
