#!/usr/bin/env bash
notify-send "Connecting to bluetooth ..."

sonym5="80:99:E7:5C:8E:85"

for _ in {1..10}; do
    if pactl list sinks short | grep -q bluez; then
        notify-send "Successfully connected to headset!"
        break
    fi
    echo "Trying to connect to headset ..."
    echo -e "connect $sonym5" | sudo bluetoothctl
    sleep 2
done

# Set audio to headset
sink=$(pactl list sinks short | grep bluez | head -1 | awk '{print $1}')
audio $sink
