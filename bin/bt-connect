#!/usr/bin/env bash
for _ in {1..10}; do
    if audio | grep -q bluez; then
        echo "Connected to headset!"
        break
    fi
    echo "Trying to connect to headset ..."
    echo -e 'connect 38:18:4C:7D:CA:CB' | sudo bluetoothctl
    sleep 2
done

# Set audio to headset
audio $(audio | grep -B1 bluez | head -1 | awk '{print $NF}')
